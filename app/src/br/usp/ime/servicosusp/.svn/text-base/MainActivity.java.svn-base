package br.usp.ime.servicosusp;

import android.app.Activity;
import android.content.Intent;
import android.os.Bundle;
import android.view.Menu;
import android.view.MenuItem;
import android.view.View;
import android.widget.AdapterView;
import android.widget.AdapterView.OnItemClickListener;
import android.widget.ListView;
import br.usp.ime.uspmap.ShowMap;

public class MainActivity extends Activity {
	/** Called when the activity is first created. */
	@Override
	public void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.main);
		ListView lv = (ListView) findViewById(R.id.optionsMainActivity);
		
		lv.setOnItemClickListener(new itemHandler());
	}
	private class itemHandler implements OnItemClickListener {


		@Override
		public void onItemClick(AdapterView<?> arg0, View arg1, int arg2,
				long arg3) {
		
			switch (arg2) {
			case 0:
				Intent i= new Intent(arg1.getContext(),ViewServicesSecond.class);
				startActivity(i);
				break;
				
			case 1:
				Intent i1= new Intent(arg1.getContext(),ViewBuildings.class);
				startActivity(i1);
				break;		
				
			case 2:
				Intent i2= new Intent(arg1.getContext(),ViewCategories.class);
				startActivity(i2);
				break;	
				
			case 3:
				Intent i3 = new Intent(arg1.getContext(), ShowMap.class);
				i3.putExtra("centerOnUser", true);
				i3.putExtra("displayCircular1Route", false);
				i3.putExtra("displayCircular2Route", false);
				startActivity(i3);
				break;
				
			default:
				break;
			}		
		}
	}

	private OptionsMenu optionsMenu;
	
	@Override
	public boolean onCreateOptionsMenu(Menu menu) {
		optionsMenu = new OptionsMenu(menu, this);
		return true;
	}

	@Override
	public boolean onOptionsItemSelected(MenuItem item) {
		optionsMenu.OptionsHandler(item);
		return true;
	}
};
