<?xml version="1.0" encoding="utf-8"?>
   
   <ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvBuildingAbv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0099CC"
            android:text="IME"
            android:textColor="#FFFFFF"
            android:textSize="20pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvBuildingName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:gravity="right"
            android:text="Instituto de Matemática e Estatística"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/tvServiceNameLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#0099CC"
            android:text="Serviços disponíveis: "
            android:textColor="#000000"
            android:textSize="10pt"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/lvBuildingServices"
            android:layout_width="fill_parent"
            android:layout_height="192dp"
            android:scrollbars="vertical" 
            android:paddingLeft="48dp"
            />

        <TextView
            android:id="@+id/tvPhotosLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#0099CC"
            android:text="Fotos do local"
            android:textColor="#000000"
            android:textSize="10pt"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/frPhotos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>

        <TextView
            android:id="@+id/tvLocalAddressLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#0099CC"
            android:text="Endereço: "
            android:textColor="#000000"
            android:textSize="10pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvLocalAddress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="#FFFFFF"
            android:text="Endereço"
            android:textColor="#555555"
            android:textSize="10pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvComplement"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="#FFFFFF"
            android:text="Complemento"
            android:textColor="#555555"
            android:textSize="10pt"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnMap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mapa" />

            <Button
                android:id="@+id/btnRoute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Traçar rota" />
        </LinearLayout>

     </LinearLayout>

</ScrollView>