<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_wrapper"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
    
    <RelativeLayout android:id="@+id/lay_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:paddingTop="25dip"
        android:layout_centerInParent="true">

        <Button android:id="@+id/Services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mainVisServices"
            android:padding="25dip"
            android:drawableTop="@drawable/icon_services" />

        <Button android:id="@+id/Buildings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/Services"
            android:text="@string/mainVisBuildings"
            android:padding="25dip"
            android:drawableTop="@drawable/icon_buildings" />

        <Button android:id="@+id/Categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Services"
            android:text="@string/mainCategories"
            android:padding="25dip"
            android:drawableTop="@drawable/icon_categories" />

        <Button android:id="@+id/Map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/Categories"
            android:layout_below="@+id/Buildings"
            android:text="@string/mainShowMap"
            android:padding="25dip"
            android:drawableTop="@drawable/icon_mapa" />
    </RelativeLayout>
</RelativeLayout>