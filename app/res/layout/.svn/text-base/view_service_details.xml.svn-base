<?xml version="1.0" encoding="utf-8"?>

<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvBuildingAbv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0099CC"
            android:textColor="#FFFFFF"
            android:textSize="20pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvBuildingName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:gravity="right"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/tvServiceNameLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#0099CC"
            android:text="Serviço: "
            android:textColor="#000000"
            android:textSize="10pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvServiceName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="#FFFFFF"
            android:textColor="#555555"
            android:textSize="10pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvServiceDescLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#0099CC"
            android:text="Descrição do serviço: "
            android:textColor="#000000"
            android:textSize="10pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvServiceDescription"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="#FFFFFF"
            android:textColor="#555555"
            android:textSize="10pt"
            android:textStyle="bold" />
        
         <TextView
            android:id="@+id/tvServiceLink"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="#FFFFFF"
            android:textColor="#000055"
            android:textSize="10pt"
            android:textStyle="bold" />
        
         <TextView
            android:id="@+id/tvTelephone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="#FFFFFF"
            android:textColor="#555555"
            android:textSize="10pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvLocalAddressLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#0099CC"
            android:text="Endereço: "
            android:textColor="#000000"
            android:textSize="10pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvLocalAddress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="#FFFFFF"
            android:textColor="#555555"
            android:textSize="10pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvComplement"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="#FFFFFF"
            android:textColor="#555555"
            android:textSize="10pt"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/frPhotosMain"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible" >

            <TextView
                android:id="@+id/tvServiceFotosLabel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#0099CC"
                android:text="Fotos do local: "
                android:textColor="#000000"
                android:textSize="10pt"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/frPhotos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnMap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mapa" />

            <Button
                android:id="@+id/btnRoute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Traçar rota" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>